# ==============================================
# LAND OVER - Backend Environment Configuration
# ==============================================

# Application Configuration
NODE_ENV=development
# PORT=5000
PORT=5001
APP_NAME=LAND OVER
APP_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/land-over
DB_NAME=land-over

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Password Reset Configuration
RESET_PASSWORD_EXPIRE=10

# Email Configuration (Using Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=noreply@landover.com
FROM_NAME=LAND OVER

# Cloudinary Configuration (Image Upload)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Google Maps API (for geocoding)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Frontend URL (for email links)
CLIENT_URL=http://localhost:3000

# Security Configuration
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=10

# Session Configuration
SESSION_SECRET=your-session-secret-key
COOKIE_SECRET=your-cookie-secret-key

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# AWS S3 Configuration (Alternative to Cloudinary)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# Payment Gateway Configuration (Razorpay/Stripe)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Social Login Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# API Documentation
API_DOCS_URL=/api-docs
SWAGGER_ENABLED=true

# Webhook URLs
WEBHOOK_SECRET=your-webhook-secret
PAYMENT_WEBHOOK_URL=/api/v1/webhooks/payment

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Development Tools
DEBUG=land-over:*
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Production Security (Only for production)
HTTPS_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=
